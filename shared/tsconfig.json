{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": false,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": ".",
      "outDir": "dist",
      "baseUrl": ".",
      "composite": true,
      "paths": {
          "*": [
              "node_modules/",
              "src/types/*"
          ]
      }
  },
  "include": [
      "**/*"
  ]
}